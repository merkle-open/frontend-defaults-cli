{
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "prettier": "prettier --write \"**/*.*(js|jsx|ts|tsx|json)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "prettier": "1.18.2",
    "@namics/prettier-config": "0.3.0",
    "husky": "3.0.5",
    "lint-staged": "9.2.5"
  }
}